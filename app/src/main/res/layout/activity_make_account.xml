<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lenovo.salestest.makeAccountActivity"
    android:background="@drawable/phase3">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/cart1" />

    <TextView
        android:id="@+id/showCusAccountInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/inputCusId"
        android:layout_width="323dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"
        android:hint="Customer Id" />

    <Button
        android:id="@+id/buttonAdminAddItem"
        android:layout_width="323dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/blue5"
        android:backgroundTint="@color/white"
        android:onClick="makeAccount"
        android:text="Create an Account for customer" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="323dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/blue5"
        android:backgroundTint="@color/white"
        android:onClick="goAdminView"
        android:text="Go Back to Admin's view" />

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="323dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/blue5"
        android:backgroundTint="@color/white"
        android:onClick="logOut"
        android:text="Log Out and Go Back to Login Page" />

</LinearLayout>
